{
    "version": 2,
    "builds": [
        {
            "src": "build/server.js",
            "use": "@now/node",
            "config": {
                "includeFiles": [
                    "build/schema/**/*graphql"
                ] 
            }


        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "build/server.js",
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Credentials": "true",
                "Access-Control-Allow-Headers": "X-Requested-With, Access-Control-Allow-Origin, X-HTTP-Method-Override, Content-Type, Cache-Control, Authorization, Accept"
              }
        },
        {
          "src": "/.*",
          "methods": ["OPTIONS"],
          "headers": {
            "Access-Control-Allow-Origin": "*",
            "Access-Control-Allow-Credentials": "true",
            "Access-Control-Allow-Headers": "X-Requested-With, Access-Control-Allow-Origin, X-HTTP-Method-Override, Content-Type, Cache-Control, Authorization, Accept"
          },
          "dest": "/cors-handler.ts"
        }
        
        
    ]
}